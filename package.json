{
  "name": "remult-kit",
  "description": "Remult-Kit is your companion for building apps with Remult.",
  "keywords": [
    "remult",
    "cli"
  ],
  "version": "0.27.5",
  "license": "MIT",
  "contributors": [
    {
      "name": "Noam Honig",
      "email": "noam.honig@gmail.com"
    },
    {
      "name": "Jean-Yves CouÃ«t",
      "email": "jycouet@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/noam-honig/remult-kit",
    "homepage": "https://remult.dev"
  },
  "type": "module",
  "bin": {
    "remult-kit": "./src/bin/index.mjs"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "release": "npm run build && npm run patch-versions && npm publish --public",
    "patch-versions": " FOR /F %i in ('npm version patch -m \"release %s\"') DO git push origin %i",
    "preview": "npm exec remult-kit",
    "test": "vitest",
    "test:integration": "playwright test",
    "test:all": "npm run test:integration && npm run test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "kitql-lint",
    "format": "kitql-lint --format"
  },
  "devDependencies": {
    "@kitql/eslint-config": "^0.1.1",
    "@kitql/internals": "^0.9.9",
    "@mdi/js": "^7.4.47",
    "@neoconfetti/svelte": "^2.2.1",
    "@playwright/test": "^1.46.1",
    "@sveltejs/adapter-node": "^2.1.2",
    "@sveltejs/kit": "^2.5.24",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/pluralize": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "highlight.js": "^11.10.0",
    "mysql2": "^3.11.0",
    "pg": "^8.12.0",
    "pluralize": "^8.0.0",
    "postcss": "^8.4.41",
    "postcss-load-config": "^5.1.0",
    "prettier": "^3.3.3",
    "remult": "^0.24.1",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "svelte-highlight": "^7.7.0",
    "svelvet": "^9.0.0",
    "tailwindcss": "^3.4.10",
    "tedious": "^16.7.1",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-kit-routes": "^0.5.3",
    "vite-plugin-stripper": "^0.3.3",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@kitql/helpers": "^0.8.10",
    "dotenv": "^16.4.5",
    "knex": "^3.1.0",
    "open": "^10.1.0"
  },
  "files": [
    "remult-kit-app/**/*",
    "src/bin/**/*"
  ]
}